<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserMapper">
    <sql id="baseId">
        id ,userName ,passWord ,realName
    </sql>
    <resultMap id="userResult" type="com.example.entity.UserAbais">
        <result column="id" jdbcType="INTEGER" property="id"></result>
        <result column="userName" jdbcType="VARCHAR" property="UN"></result>
        <result column="password" jdbcType="VARCHAR" property="PW"></result>
        <result column="realName" jdbcType="VARCHAR" property="RN"></result>
    </resultMap>
    <resultMap id="BaseResultMap" type="com.example.entity.User">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="userName" jdbcType="VARCHAR" property="userName" />
        <result column="passWord" jdbcType="VARCHAR" property="passWord" />
        <result column="realName" jdbcType="VARCHAR" property="realName" />
    </resultMap>

    <select id="Sel" resultType="com.example.entity.User">
        select * from user where id = #{id}
    </select>

    <select id="selectListMap"  resultType="com.example.entity.User">
        select * from user
    </select>

    <select id="selectMap"  resultType="map">
        select * from user where id = #{id}
    </select>

    <select id="SelList" resultMap="userResult">
        select <include refid="baseId"/> from user
    </select>

    <insert id="insertUser" useGeneratedKeys="true" parameterType="com.example.entity.User"
            keyProperty="id">
        insert into user (userName,passWord,realName)
        values (#{userName},#{passWord},#{realName})
    </insert>

    <insert id="insertUserList" useGeneratedKeys="true" parameterType="java.util.List"
            keyProperty="id" >
        insert into user (userName,passWord,realName) values
        <foreach collection="list" item="item" separator=",">
            (#{item.userName},#{item.passWord},#{item.realName})
        </foreach>
    </insert>

